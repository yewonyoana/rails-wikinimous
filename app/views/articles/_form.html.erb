<div class="d-flex flex-column">
  <%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title,  class: 'form-control'%>
  <%= f.label :content, class: 'mt-3' %>
  <%= f.text_area :content, class: 'form-control' %>
  <%= f.submit class: 'btn btn-dark mt-3 me-auto' %>
  <% end %>
</div>
