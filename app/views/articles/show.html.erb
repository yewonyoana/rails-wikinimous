<div class="container d-flex flex-column justify-content-between mt-5">
  <%= link_to articles_path, class: "text-decoration-none h5 btn btn-dark align-self-end" do %>
    <i class="fa-solid fa-house"></i>
  <% end %>
  <div class="align-self-center text-center">
    <h1><%= @article.title %></h1>
    <p><%= @article.content %></p>
  </div>
  <div class="mt-3 align-self-center">
    <%= link_to edit_article_path, class: "text-decoration-none heading-6 btn btn-dark" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?" }, class:
  "text-decoration-none btn btn-dark" do%>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
  </div>
</div>
